<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size14"
        android:paddingTop="@dimen/size20"
        android:paddingRight="@dimen/size14">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="2dp"
                    android:text="@string/app_name"
                    android:textColor="#fff"
                    android:textSize="@dimen/size12"
                    android:textStyle="bold" />

            <Button
                    android:id="@+id/btn_sigin_out"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/boder_signin"
                    android:onClick="logout"
                    android:text="@string/txt_signout"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/size12" />
        </RelativeLayout>

        <TextView
                android:id="@+id/txt_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/txt_title_loginfb"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size20"
                android:textStyle="bold" />

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_money" />

        <TextView
                android:id="@+id/txtMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/txt_3000"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/size30"
                android:textStyle="bold" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="@dimen/size20"
                android:background="@drawable/boder_text_fb"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size10"
                    android:text="@string/txt_content_code"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size14" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size10"
                    android:text="@string/txt_Your_voucher_code"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size14" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/txtRandom"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size30"
                        android:layout_gravity="center"
                        android:text="TEST"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/size25"
                        android:textStyle="bold" />

                <ImageView
                        android:id="@+id/imgCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size30"
                        android:layout_marginLeft="@dimen/size20"
                        android:src="@drawable/ic_copy" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>