<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size20"
    android:paddingRight="@dimen/size20"
    android:background="#DCD9D9"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/size20"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/size20"
            android:layout_height="wrap_content">
            <RadioButton
                android:textColor="@color/color_black"
                android:textSize="@dimen/size14"
                android:id="@+id/radio_a"
                android:checked="true"
                android:text="@string/txt_introduce_4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/radio_b"
                android:textColor="@color/color_black"
                android:textSize="@dimen/size14"
                android:text="@string/txt_introduce_4_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RadioGroup>
       <LinearLayout
           android:visibility="gone"
           android:orientation="vertical"
           android:id="@+id/linearIntroduce4"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_email_register"
               android:textSize="@dimen/size16"
               android:textColor="@color/color_black"
               android:layout_marginTop="@dimen/size20"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_marginTop="@dimen/size10"
               android:layout_height="wrap_content">
               <EditText
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:layout_weight="1"
                   android:hint="YYY"
                   android:textSize="@dimen/size16"
                   android:maxLines="1"
                   android:textColor="@color/color_black"
                   android:inputType="number"
                   android:background="@drawable/test_change_text"
                   android:layout_margin="5dp"/>
               <EditText
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:maxLines="1"
                   android:hint="MM"
                   android:layout_weight="1"
                   android:textSize="@dimen/size16"
                   android:textColor="@color/color_black"
                   android:background="@drawable/test_change_text"
                   android:layout_margin="5dp"/>
               <EditText
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:maxLines="1"
                   android:layout_weight="1"
                   android:hint="DD"
                   android:textSize="@dimen/size16"
                   android:textColor="@color/color_black"
                   android:background="@drawable/test_change_text"
                   android:layout_margin="5dp"/>
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_phone_register"
               android:textSize="@dimen/size16"
               android:textColor="@color/color_black"
               android:layout_marginTop="@dimen/size20"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_marginTop="15dp"
               android:gravity="center_vertical"
               android:layout_height="wrap_content">
               <com.hbb20.CountryCodePicker
                   android:id="@+id/country_picker"
                   android:layout_width="100dp"
                   android:layout_height="40dp"
                   android:layout_centerVertical="true"
                   android:includeFontPadding="false"
                   android:textColor="@color/color_black"
                   app:ccp_showNameCode="false"
                   app:ccp_textSize="@dimen/size16" />
               <EditText
                   android:layout_width="0dp"
                   android:layout_height="40dp"
                   android:maxLines="1"
                   android:layout_weight="1"
                   android:textSize="@dimen/size16"
                   android:textColor="@color/color_black"
                   android:background="@drawable/test_change_text"
                   android:layout_margin="5dp"/>

           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_pass"
               android:textSize="@dimen/size16"
               android:layout_marginBottom="15dp"
               android:textColor="@color/color_black"
               android:layout_marginTop="15dp"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:maxLines="1"
               android:textSize="@dimen/size16"
               android:textColor="@color/color_black"
               android:background="@drawable/test_change_text"
               android:layout_margin="5dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/txt_confirm_pass"
               android:layout_marginBottom="15dp"
               android:textSize="@dimen/size16"
               android:textColor="@color/color_black"
               android:layout_marginTop="15dp"/>

           <EditText
               android:layout_marginTop="@dimen/size20"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:maxLines="1"
               android:layout_weight="1"
               android:textSize="@dimen/size16"
               android:textColor="@color/color_black"
               android:background="@drawable/test_change_text"
               android:layout_margin="5dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_marginTop="@dimen/size20"
               android:gravity="center_vertical"
               android:layout_height="wrap_content">
               <CheckBox
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="@string/txt_introduce_4_3"
                   android:textColor="@color/color_black"
                   android:layout_marginLeft="15dp"
                   android:textSize="@dimen/size14"/>
           </LinearLayout>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="@string/txt_introduce_4_4"
               android:gravity="center"
               android:textColor="@color/color_red"
               android:textSize="@dimen/size12"
               android:layout_marginTop="@dimen/size20"/>
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="40dp"
               app:cardCornerRadius="@dimen/size30"
               android:layout_marginTop="@dimen/size10"
               android:elevation="7dp"
               android:layout_marginBottom="@dimen/size20"
               app:cardBackgroundColor="#8A8686"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="@string/txt_create_acc"
                   android:gravity="center"
                   android:textColor="@color/color_white"
                   android:textSize="@dimen/size16"
                   android:textStyle="bold"/>

           </androidx.cardview.widget.CardView>
       </LinearLayout>

    </LinearLayout>

</LinearLayout>